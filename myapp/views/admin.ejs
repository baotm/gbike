<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
<script>
  function show(id) {

    a = id;

    var query = $('#' + a);

    // check if element is Visible
    var isVisible = query.is(':visible');

    if (isVisible === true) {
      // element is Visible

      $("#" + a).hide();
      $("#i" + a).show();
    } else {
      // element is Hidden

      $("#" + a).show();
      $("#i" + a).hide();
    }
  }
  $(document).ready(function () {

    var table = $('#table_id').DataTable({
      "ajax": '/ajax_pawn_item_get_all',
      "columns": [
        { "data": "ten" },
        { "data": "sotien" },
        { "data": "mondo" },
        { "data": "ngaycam" },
        { "data": "trinhtrang" },
        { "data": "laixuat" },
        { "defaultContent": '<i class="fa fa-edit editor_pic btnEdit"></i> <span class="text-muted"></span>' }
      ]
    });
    $('#table_id tbody').on('click', 'tr', function () {
      if ($(this).hasClass('selected')) {
        _r = this.closest('tr')
        rowSelect = table.row(_r).data();
        DataId = rowSelect.id;
        //get ajax call ajax_pawn_item_get
        _url = "ajax_pawn_item_get?id=" + DataId;

        $.ajax({
          url: _url
        }).done(function (data) {
          //data for modal
          info = data[0];
          $('#modal_title').html('Thông Tin Cho Mã Đồ :' + info.id);
          $('#modal_id').text(info.id);

          $('#modal_name').text(info.ten);
          $('#imodal_name').val(info.ten);

          $('#modal_phone').text(info.sodienthoai);
          $('#imodal_phone').val(info.sodienthoai);

          $('#modal_mondo').text(info.mondo);
          $('#imodal_mondo').val(info.mondo);

          $('#modal_money').text(info.sotien);
          $('#imodal_money').val(info.sotien);

          $('#modal_pic').text(info.hinhanh);
          $('#imodal_pic').val(info.hinhanh);

          $('#modal_ngaycam').text(info.ngaycam);
          $('#imodal_ngaycam').val(info.ngaycam);

          $('#modal_ngaychuoc').text(info.ngaychuoc);
          $('#imodal_ngaychuoc').val(info.ngaychuoc);

          $('#modal_tinhtrang').text(info.trinhtrang);
          $('#imodal_tinhtrang').val(info.trinhtrang);

          $('#modal_tienno').text(info.tienno);
          $('#imodal_tienno').val(info.tienno);

          $('#modal_laixuat').text(info.laixuat);
          $('#imodal_laixuat').val(info.laixuat);

          var tienlai = 1000;
          $('#modal_tienlai').text(tienlai);

          $('#modal_ghichu').val(info.ghichu);
          $('#imodal_ghichu').text(info.ghichu);


          $('.bs-example-modal-lg').modal();

          console.log(data);
        });
        $(this).removeClass('selected');
      }
      else {
        table.$('tr.selected').removeClass('selected');
        $(this).addClass('selected');
      }
    });




  });
</script>

