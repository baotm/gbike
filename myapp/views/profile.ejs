<% include view_tong/top %>

<div class="page-title">
    <div class="title_left">
      <h3>Thông tin nhân viên</h3>
    </div>
  </div>
  <div class="x_panel">
    <div class="x_content">
      <div class="row">

        <% for (var i =0; i < account.length;  i++ ) { %>
        <div class="col-md-4 col-sm-4 col-xs-12 profile_details">
          <div class="well profile_view">
            <div class="col-sm-12">
              <h4 class="brief"><i><%= account[i].role_id %></i></h4>
              <div class="left col-md-7 col-sm-7">
                <h2>  <%= acc_info[i].name %></h2>
                <p><strong>Đ/c: </strong> <%= acc_info[i].address %> </p>
                <ul class="list-unstyled">
                  <li><i class="fa fa-user"></i> Tuổi: <%= acc_info[i].age %></li>
                  <li><i class="fa fa-facebook"></i> fb: <%= acc_info[i].email %></li>
                  <li><i class="fa fa-phone"></i> Phone: <%= acc_info[i].phone %></li>
                </ul>
              </div>
              <div class="right col-md-5 col-sm-5">
                <img src='<%= acc_info[i].avatar %>' alt=""
                  class="img-circle img-responsive" style="width: 128px;height: 128px;;">
              </div>
            </div>
            <div class="col-sm-12 bottom text-center">

              <div class="col-xs-12 col-sm-12">
                <a href="nhanvien/profile?id=<%= account[i].id %>">
                <button type="button" class="btn btn-primary">
                  <i class="fa fa-user"> </i> View Profile
                </button></a>
              </div>
            </div>
          </div>
        </div>

        <% } %>


      </div>
    </div>
  </div>

<% include view_tong/bot %>